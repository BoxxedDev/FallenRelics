        },
        {
          "Sensor": {
            "Type": "Target",
            "Range": {"Compute": "AttackDistance"},
            "Filters": [
              {
                "Type": "LineOfSight"
              }
            ]
          },
          "ActionsBlocking": true,
          "Actions": [
            {
              "Type": "Timeout",
              "Delay": [0.2, 0.2]
            }
          ],
          "HeadMotion": {
            "Type": "Aim",
            "RelativeTurnSpeed": {"Compute": "CombatRelativeTurnSpeed"}
          }
        },
        {
          "Actions": [
            {
              "Type": "State",
              "State": ".Chase"
            }
          ]
        }
      ]
